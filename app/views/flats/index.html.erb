<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem; margin: 16px;">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <div style="display: flex; justify-content: space-between;">
            <p><%= flat.number_of_guests %> <i class="fa-solid fa-people-group"></i></p>
            <p>â‚¬<%= flat.price_per_night %>/night</p>
          </div>
          <a href="#" class="btn btn-primary">More info</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
